<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Element Renumbering [ESC to Exit]" Height="390" Width="340"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Element type:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="ElementType" Grid.Row="0" Grid.Column="1" Margin="2"/>

        <TextBlock Text="Current number:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CurrentNumber" Grid.Row="1" Grid.Column="1" Text="1" Margin="2"/>

        <TextBlock Text="If Char Sequence:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CharSeq" Grid.Row="2" Grid.Column="1" Margin="2" IsEnabled="False"/>

        <TextBlock Text="Zero Padding:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="ZeroPadding" Grid.Row="3" Grid.Column="1" Text="0" Margin="2"/>

        <TextBlock Text="Number Prefix:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="NumPrefix" Grid.Row="4" Grid.Column="1" Margin="2"/>

        <TextBlock Text="Number Suffix:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="NumSuffix" Grid.Row="5" Grid.Column="1" Margin="2"/>

        <CheckBox x:Name="ParameterCheckBox" Grid.Row="6" Grid.Column="0" Content="Parameter:" VerticalAlignment="Center" Margin="0,6,0,0" Checked="ParameterCheckBoxChanged" Unchecked="ParameterCheckBoxChanged"/>
        <TextBox x:Name="ParameterName" Grid.Row="6" Grid.Column="1" Text="Comments" Margin="2,6,0,0" IsEnabled="False"/>

        <CheckBox x:Name="AutoSwapCheckBox" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Content="Auto-swap Element Numbers" Margin="0,4,0,0"/>
        <CheckBox x:Name="AllowDupCheckBox" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Content="Allow Duplicate Values" Margin="0,4,0,0"/>
        <CheckBox x:Name="SeparateUndoCheckBox" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Content="Separate Undo" Margin="0,4,0,0"/>
        <CheckBox x:Name="CharSeqCheckBox" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Content="Use Char Sequence:" Margin="0,4,0,0" Checked="CharSeqCheckBoxChanged" Unchecked="CharSeqCheckBoxChanged"/>
        <TextBlock Text="ABCDEFGHIJKLMNOPQRSTUVWXYZ" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Margin="2,4,0,0" Foreground="Gray" x:Name="CharSeqGuide"/>
        <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="4" Click="ButtonOKClick"/>
            <Button Content="Cancel" Width="60" Margin="4" Click="ButtonCancelClick"/>
        </StackPanel>
    </Grid>
</Window>